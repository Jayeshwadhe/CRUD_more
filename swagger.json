      "post": {
        "summary": "Employee Register",
        "tags": ["Employee"],
        "description": "OK (successfully register)",
        "parameters": [
          {
            "name": "Employee Registration",
            "in": "body",
            "description": "Employee Registration",
            "schema": {
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "phoneno": {
                  "type": "string"
                },
                "salary": {
                  "type": "number"
                },
                "gender": {
                  "type": "string"
                },
                "birthday": {
                  "type": "string"
                },
                "city": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "403": {
            "description": "Access Denied"
          },

          "404": {
            "description": "please login again!"
          },

          "401": {
            "description": "This student already exists"
          },

          "200": {
            "description": "Login Success"
          },

          "500": {
            "description": "Something went wrong"
          }
        }
      }
    },
